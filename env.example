# Backend API base URL for contact form when using static hosting (GitHub Pages)
# Example: https://your-vercel-app.vercel.app
NEXT_PUBLIC_CONTACT_API_URL=

# Email credentials used by server-side route when hosted on Vercel/Node
EMAIL_USER=
EMAIL_PASS=

# Database (Optional - for future MongoDB integration)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Contact Form Rate Limiting (Optional)
CONTACT_RATE_LIMIT=5
CONTACT_RATE_WINDOW=900000
